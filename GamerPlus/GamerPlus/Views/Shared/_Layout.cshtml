<script>

    function closeModal() {

        setTimeout(function () {
            $(".modalGameDetails").css('opacity', '0');
            $(".modalGameDetails").css('transition', '0.5s ease-out');

            setTimeout(function () {
                $('.modalMain').css({
                    'opacity': '0',
                    'transition': '0.5s ease-out'
                });
                $(".modalMain").css("display", "none");
            }, 500);


        }, 200);
    }

</script>