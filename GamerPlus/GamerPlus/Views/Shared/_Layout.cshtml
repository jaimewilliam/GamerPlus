<!DOCTYPE html>



<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Css/gamerpluscss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/gamerplusjquery")
    @Scripts.Render("~/bundles/bootstrap")

    <style>

        .modalMain {
            position: absolute;
            background-color: rgba(0,0,0,0.5);
            width: 100%;
            height: 100%;
            z-index: 2;
            display: none;
            top: 0;
            left: 0;
            opacity: 0;
            overflow:hidden
        }

        .modalGameDetails {
            position: relative;
            width: 700px;
            height: 100%;
            cursor:pointer;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            opacity: 0;
            overflow: hidden
        }

        .closeModal {
            position: absolute;
            width: 40px;
            height: 40px;
            background-color: #f5f5f5;
            border-radius: 100%;
            top: 1%;
            right: 1%;
            /*transform:translateY(-10%);*/
            z-index: 1;
        }

        .closed {
            position: absolute;
            width: auto;
            height: auto;
            color: #ccc;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: larger
        }
    </style>

</head>
